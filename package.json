{
  "name": "markdown-to-adf",
  "version": "0.2.8",
  "description": "Convert Markdown to Atlassian Document Format (ADF) with context-aware presets for Jira",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "docs",
    "SECURITY.md"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "release": "standard-version",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:push": "npm run release && git push --follow-tags origin main",
    "release:patch:push": "npm run release:patch && git push --follow-tags origin main",
    "release:minor:push": "npm run release:minor && git push --follow-tags origin main",
    "release:major:push": "npm run release:major && git push --follow-tags origin main",
    "prepublishOnly": "npm run typecheck && npm run lint && npm run build && bun test"
  },
  "keywords": [
    "markdown",
    "adf",
    "atlassian",
    "jira",
    "confluence",
    "document-format",
    "converter",
    "parser",
    "typescript"
  ],
  "author": "Christian Gilan <cgilan@twilio.com>",
  "license": "MIT",
  "dependencies": {
    "markdown-it": "^14.0.0",
    "markdown-it-task-lists": "^2.1.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/markdown-it": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "standard-version": "^9.5.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/califlower/markdown-to-adf.git"
  }
}
