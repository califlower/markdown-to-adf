{
  "name": "markdown-to-adf",
  "version": "0.1.0",
  "description": "Convert Markdown to Atlassian Document Format (ADF) with context-aware presets for Jira",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm && tsc --emitDeclarationOnly",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run typecheck && bun run build && bun test"
  },
  "keywords": [
    "markdown",
    "adf",
    "atlassian",
    "jira",
    "confluence",
    "document-format",
    "converter",
    "parser",
    "typescript"
  ],
  "author": "Christian Gilan <cgilan@twilio.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/califlower/markdown-to-adf.git"
  }
}
